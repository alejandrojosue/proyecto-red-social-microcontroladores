---
import LayoutAccount from "../../layouts/LayoutAccount.astro"
---
<LayoutAccount title = "Crear Cuenta">
  <div class="container">
   <div class="row justify-content-center">
    <div class="col-md-6 login-container">
     <div class="text-center mb-4">
      <i class="bi bi-person-plus icono-persona"></i>
      <!-- Agregar la clase bi-3x para hacer el icono 3 veces más grande -->
      <h2 class="mb-0">Crear Cuenta</h2>
     </div>

     <form>
      <div class="form-group">
       <input
        type="text"
        class="form-control"
        id="usuario"
        placeholder="Usuario"
       />
      </div>
      <div class="form-group">
       <input
        type="email"
        class="form-control"
        id="correo"
        placeholder="Correo"
       />
      </div>
      <div class="form-group">
       <input
        type="password"
        class="form-control"
        id="password"
        placeholder="Contraseña"
       />
      </div>
      <div class="form-group">
       <input
        type="password"
        class="form-control"
        id="password2"
        placeholder="Confirmar contraseña"
       />
      </div>
      <button
       type="submit"
       class="btn btn-success btn-sm btn-block mx-auto"
       style="width: 80px; height: 40px; box-shadow: 0px 3px 5px rgba(0, 0, 0, 0.3);"
       >Crear</button
      >
     </form>
     <!-- Enlace "Iniciar Sesión" -->
     <p class="text-center mt-3 mb-0" style="font-size: 0.6em;">
      Ya tienes una cuenta ? <a
       href="#"
       class="login-link"
       style="font-size: 0.9em;">Iniciar Sesión</a>
     </p>
    </div>
   </div>
  </div>
 </LayoutAccount>